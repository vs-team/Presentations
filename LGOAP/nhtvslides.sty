\newenvironment{slide}[3]
{
\begin{frame}{#1}
\begin{block}{#2}
\begin{itemize}
#3
\end{itemize}
\end{block}
}{
\end{frame}
}

\newenvironment{textslide}[3]
{
\begin{frame}{#1}
\begin{block}{#2}
#3
\end{block}
}{
\end{frame}
}

\newenvironment{codeslide}[3]
{
\begin{frame}[fragile]{#1}
\begin{block}{#2}
\begin{lstlisting}[language=CAML]
#3
\end{lstlisting}
\end{block}
}{
\end{frame}
}

